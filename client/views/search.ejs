<%- include('header.ejs') %> 

    <h1>文章搜尋頁</h1>

    <form action="/search" method="GET">
        <label for="keyword">關鍵字搜尋</label>
        <input type="text" id="keyword" name="keyword">
        <input type="submit" value="搜尋">
    </form>

     <% if(data !=='N/A' && data.length >0) { %>
        <h1>共<%=data.length%>個結果</h1>
        <% data.forEach(article => { %>
            <h3><a href="/post/view/<%=article._id%>" target="_blank"><%=article.title%></a> (瀏覽次數 : <%=article.views%>)</h3>
        <% }) %>
    <% } %>

    <% if(data.length===0) { %>
        <p>沒有找到任何文章 (No results found)</p>
    <% } %>
    
<%- include('footer.ejs') %> 